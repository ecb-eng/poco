#!/bin/bash
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
sudo apt-get install -y python3 gir1.2-gtk-3.0 gir1.2-wnck-3.0 gir1.2-appindicator3-0.1 gir1.2-keybinder-3.0 libwnck-3-0 python3-gi-cairo python3-xdg python3-dbus python3-setproctitle 1>/dev/null 
sudo apt-get install -y python3-distutils 1>/dev/null # python3-stdeb
sudo $DIR/../setup.py install 1>/dev/null && echo "	OK: vimwn files installed" && \
sudo update-icon-caches /usr/share/icons/* 1>/dev/null && echo "	OK: icons cache updated" && \
$DIR/package delete && echo "	SUCCESS: vimwn installed"
